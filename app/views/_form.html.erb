<%= form_for @message, :url => contact_path do |form| %>
    <div class= "inputs" >
      <%= form.label :name %>
      <%= form.text_field :name, class: 'name_field', autofocus: true, placeholder: "Name", required: true %><br>
      <%= form.label :email %>
      <%= form.text_field :email, class: 'email_field', autofocus: true, placeholder: "email@example.com", required: true %><br><br><br>
      <%= form.label :subject %>
      <%= form.text_field :subject, class: 'subject_field', autofocus: true, placeholder: "Subject", required: true %><br>
      <%= form.label :body %>
      <%= form.text_area :body, class: 'body_field', autofocus: true, placeholder: "Hello...", required: true %>
    </div><br>

    <div class = "submit" >
      <%= form.submit "Send", class: "send"%>
    </div>
<% end %>