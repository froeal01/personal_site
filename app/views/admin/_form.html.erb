<div class = "admin_container">
	<% if @project %>

	 <%= form_for(@project) do |f| %>
	 	<%= f.label :name %>
	 	<%= f.text_field :name %><br>	
	 	<%= f.label :description %>
	 	<%= f.text_area :description, size: "30x10" %><br>
	 	<%= f.label :url %>
	 	<%= f.text_field :url%>
	 	<%= f.submit "submit" %>
	 <% end %>
	<% end %>

	<div class = "submit">
		<button>
			<%= link_to "delete", @project, {method: :delete} %>
		</button>
	</div>
</div>
